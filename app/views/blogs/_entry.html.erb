<% article = entry.to_article %>
  <% if @asset.present? %>
    <section class="prologue">
        <div class="grating">
            <div class="inner bound clearfix">
              <div class="prose">
                  <h1 class="title"><%= article.short_title %></h1>
                    <aside class="byline">
                      <h2 class="author">by <%= render_byline article.original_object %></h2>
                        <%= smart_date_js article.public_datetime %>
                    </aside>
                    <aside class="share">
                        <ul>
                            <li><a href="#">Share on Facebook</a></li>
                            <li><a href="#">Share on Twitter</a></li>
                            <li><a href="#">Share on Google Plus</a></li>
                            <li><a href="#">Share via Email</a></li>
                        </ul>
                    </aside>
                      <aside class="caption">
                        <p><%= @asset.caption %><mark class="credit"><%= link_to @asset.owner, '#' %></mark></p>
                      </aside>
                </div><!--/ .prose -->
                <div class="asset">
                    <div class="ratio">
                        <div class="fill"></div>
                        <b class="img-contain">
                          <%= image_tag @asset.eight.url %>
                        </b>
                    </div><!--/ .ratio -->
                </div><!--/ .asset -->
            </div>
        </div>
        <div class="ephemera"><%= image_tag @asset.full.url %></div>
    </section><!--/ .prologue -->
   <%end %>
    <div class="report">
        <div class="inner bound clearfix">
            <article class="prose">
              <%= article.body.html_safe %>

              <% if @related_articles.presence %>
                <aside class="related">
                    <header><h1>Related Links</h1></header>
                    <nav>
                        <ul>
                            <% @related_articles.each do |article| %>
                              <% feature_type = article.original_object.feature_type.present? ? article.original_object.feature_type_name.downcase : 'article' %>
                              <li class=<%= feature_type %>>
                                <%= link_to article.public_path do %>
                                  <mark><%= article.short_title %></mark>
                                  <span><%= feature_type %></span></a>
                                <% end %>
                              </li>
                            <% end %>
                        </ul>
                    </nav>
                </aside>
              <% end %>
              </article>
            <section class="supportive">
              <% if audio = article.audio.first %>
                    <aside class="audio">
                      <header>
                          <h1>Play this article's audio</h1>
                      </header>
                      <div class="audio-trigger">
                        <button value="activate"><%= link_to 'Play audio', audio.url, class: "play-btn audio-toggler" %></button>
                          <ul class="meta">
                            <li class="duration"><%= format_duration audio.duration %></li>
                              <li class="link"><%= link_to 'Download', audio.url %></li>
                          </ul>
                      </div>
                    </aside>
                  <% end %>
              <% if issue = article.original_object.issues.first %>
                <aside class="see-more issue">
                    <header>
                        <h1>More from this Issue</h1>
                        <h2 class="clearfix">
                          <span><%= link_to issue.title, issue_path(issue.slug) %></span>
                            <mark><%= link_to 'See All', issues_path %></mark>
                        </h2>
                    </header>
                    <ul class="previews">
                      <% if issue_articles = issue.articles.first(3) %>
                        <% issue_articles.each do |article| %>
                          <li>
                            <%= link_to article.public_path do %>
                                <figure class="ratio-pairing clearfix">
                                    <div class="ratio">
                                        <div class="fill"></div>
                                        <b class="img-contain"><%= image_tag article.asset.lsquare.url %></b>
                                    </div><!--/ .ratio -->
                                    <figcaption>
                                        <%= smart_date_js article.public_datetime %>
                                        <mark><%= article.short_title %></mark>
                                    </figcaption>
                                </figure><!--/ .ratio-pairing -->
                            <% end %>
                            </li>
                        <% end %>
                      <% end %>
                    </ul>
                </aside>
              <% end %>
                <aside class="see-more kpcc">
                    <header>
                        <h1>Popular now on KPCC</h1>
                    </header>
                    <ul class="previews">
                      <% if @popular_articles.presence %>
                        <% @popular_articles.each do |article| %>
                          <li>
                            <%= link_to article.public_path do %>
                                  <figure class="ratio-pairing clearfix">
                                      <div class="ratio">
                                          <div class="fill"></div>
                                          <b class="img-contain"><%= image_tag article.asset.lsquare.url %></b>
                                      </div><!--/ .ratio -->
                                      <figcaption>
                                          <%= smart_date_js article.public_datetime %>
                                          <mark><%= article.short_title %></mark>
                                      </figcaption>
                                  </figure><!--/ .ratio-pairing -->
                            <% end %>
                          </li>
                        <% end %>
                      <% end %>
                    </ul>
                </aside>
            </section>
        </div>
    </div><!--/ .report -->

    <%= render 'shared/mercedes-ad' %>
    <%= render partial: 'shared/triptych', locals: {category: entry.category, articles: @three_recent_articles } %>

    <div class="townhall">
